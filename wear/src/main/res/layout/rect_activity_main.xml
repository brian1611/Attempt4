<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    tools:deviceIds="wear_square"
    android:weightSum="1"




    >

<RelativeLayout

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Console"
    android:id="@+id/textView"
    android:layout_below="@+id/textView2" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Functions and pin options"
        android:id="@+id/textView2"
        android:layout_below="@+id/seekBar" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"

         />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="function"
        android:background="@color/dark_blue"
        android:id="@+id/connect"
        android:layout_below="@id/imageView"
        android:layout_alignEnd="@+id/imageView2" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:background="@color/dark_blue"
        android:id="@+id/button"
        android:layout_below="@+id/connect"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/spinner1" />

    <Spinner
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:entries="@array/pin_num"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />
    <Spinner
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:entries="@array/pin_num"
        android:layout_above="@+id/spinner2"
        android:layout_centerHorizontal="true" />
    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:entries="@array/function"

        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:entries="@array/choice"

        android:layout_below="@+id/button"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@+id/spinner2"
        android:background="@color/semitransparent_grey"
        android:max="255" />

</RelativeLayout>
    </ScrollView>
